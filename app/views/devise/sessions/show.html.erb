                <ul class="nav navbar-nav pull-right">
                    <li><a href="/causes">Browse Projects</a>
                    </li>
                    <li><a href="/users/sign_in">Log In</a>

                    </li>
                    <li><a href="/users/sign_up">Sign Up</a>
                    </li>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->

    </nav>
</head>

<body>
    <%if user_signed_in?%>

    <div class="container">

        <div class="row">

            <div class="col-lg-12">
                <h1 class="page-header">Social Causes
                    <small>The Most Popular Student Groups on Campus<span class="pull-right"><%= link_to t('.new cause', :default => t("helpers.links.Add Cause")), new_cause_path, :class => 'btn btn-success' %></span></small>
                </h1>
                

            </div>

        </div>

        <% @causes.each do |cause| if current_user.id in cause.users %>

        <div class="row">

            <div class="col-lg-7 col-md-7">
                <a href="#">
                    <img class="img-responsive" src="http://placehold.it/700x300" alt="">
                </a>

            </div>

            <div class="col-lg-5 col-md-5">
                <h3><%= cause.name %></h3>
                <h4><%= cause.tagline %></h4>
                <p><%= cause.description %></p>
                <a class="btn btn-primary" href="#">View Project <span class="glyphicon glyphicon-chevron-right"></span></a>

            </div>

        </div>

        <hr>

        <% end %>

